<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.radinet.ble_app.MainActivity">

    <ImageView
        android:id="@+id/Imageview_Background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/picture_background"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:id="@+id/Layout_Logo"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/Imageview_Start"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icon_value"/>
        <TextView
            android:id="@+id/Textview_Logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POWER WATCHDOG"
            android:gravity="center"
            android:textColor="@color/Color_Black"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_main">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_app">
            <RelativeLayout
                android:id="@+id/display_RelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:background="@color/Color_White">
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/linearLayout"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:background="@color/Color_White">

                <TextView
                    android:id="@+id/padding1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/Button_Scan"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_scan" />

                <TextView
                    android:id="@+id/padding2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/Button_Value"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_value" />

                <TextView
                    android:id="@+id/padding3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/Button_Setting"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_setting" />

                <TextView
                    android:id="@+id/padding4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
